<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/skills_content_wrapper"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/skills_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="0.7"
            android:text="Skill name"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/skills_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="0.2"
            android:text="Skill %"
            android:textAppearance="?attr/textAppearanceListItem" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/skills_del_wrapper"
        android:layout_weight="0.2">

        <ImageView
            android:id="@+id/skills_del_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkorange"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_delete" />
    </FrameLayout>
    </LinearLayout>
    <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
        android:id="@+id/skills_list_discretebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dsb_min="0"
        app:dsb_max="10" />
</LinearLayout>