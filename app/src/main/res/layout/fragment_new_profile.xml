<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/new_profile_relative_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="australia.godoer.pinupp.Views.Profile.NewProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_profile_list_hi_msg"
        android:text="Hi"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_profile_list_name_msg"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:text="Username"
        android:layout_below="@id/new_profile_list_hi_msg"
        android:textAlignment="center"
        android:textSize="23sp"/>

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:id="@+id/new_profile_image"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/new_profile_list_name_msg"
        />


    <!--<com.mikhaellopez.circularimageview.CircularImageView-->
        <!--android:layout_width="85dp"-->
        <!--android:layout_height="85dp"-->
        <!--android:layout_marginTop="25dp"-->
        <!--android:id="@+id/new_profile_image"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_below="@id/new_profile_list_name_msg"-->
        <!--android:src="@drawable/myprofile"-->
        <!--app:civ_border_color="#FFFF8800"-->
        <!--app:civ_border_width="4dp"-->
        <!--app:civ_shadow="true"-->
        <!--app:civ_shadow_color="#FFFF8800"-->
        <!--app:civ_shadow_radius="10"-->
      <!--/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_profile_list_msg"
        android:layout_marginTop="45dp"
        android:paddingBottom="25dp"
        android:layout_below="@id/new_profile_image"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_profile_title_msg"
        android:layout_marginTop="15dp"
        android:text="Profile title"
        android:layout_below="@id/new_profile_list_msg"
        android:textSize="18sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_profile_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_profile_title_msg"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/new_profile_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Enter title (e.g Android Developer)"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_profile_get_started_btn"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="Go Ahead    >"
        android:layout_below="@id/new_profile_title_wrapper"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner"
        android:paddingRight="25dp"
        android:paddingLeft="35dp"
        />

</RelativeLayout>
