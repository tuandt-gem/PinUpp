<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PreviewText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PreviewText.Header">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|left</item>
    </style>
    <style name="PreviewText.Header.Name">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PreviewText.Header.Position">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PreviewText.Header.Normal">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PreviewText.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="PreviewText.Position">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PreviewText.Normal">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PreviewText.Desc">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="CircleText">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_circle_job_node</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">\?</item>
    </style>
</resources>
